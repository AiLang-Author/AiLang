// Test StringSplit - check pointer values

FixedPool.TestData {
    "source": Initialize="John Smith"
}

SubRoutine.Main {
    PrintMessage("=== StringSplit Pointer Test ===")
    PrintMessage("")
    
    PrintMessage("Calling StringSplit...")
    parts = StringSplit(TestData.source, " ")
    
    PrintMessage("Array pointer: ")
    PrintNumber(parts)
    PrintMessage("")
    
    PrintMessage("Getting first element pointer...")
    first_ptr = ArrayGet(parts, 0)
    PrintMessage("First pointer value: ")
    PrintNumber(first_ptr)
    PrintMessage("")
    
    PrintMessage("Getting second element pointer...")
    second_ptr = ArrayGet(parts, 1)
    PrintMessage("Second pointer value: ")
    PrintNumber(second_ptr)
    PrintMessage("")
    
    PrintMessage("Trying to print first (if pointer != 0)...")
    PrintMessage(first_ptr)
    PrintMessage("")
    
    PrintMessage("Trying to print second (if pointer != 0)...")
    PrintMessage(second_ptr)
    PrintMessage("")
}

RunTask(Main)