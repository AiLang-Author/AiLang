// test_loops_comprehensive.ailang
// Test all loop constructs

PrintMessage("Comprehensive Loop Test")
PrintMessage("========================")

// Test basic while loop
counter = 0
PrintMessage("While loop test:")
WhileLoop LessThan(counter, 3) {
    PrintNumber(counter)
    counter = Add(counter, 1)
}

// Test nested loops
PrintMessage("Nested loop test:")
i = 0
WhileLoop LessThan(i, 2) {
    j = 0
    WhileLoop LessThan(j, 2) {
        sum = Add(i, j)
        PrintNumber(sum)
        j = Add(j, 1)
    }
    i = Add(i, 1)
}

// Test loop with break (if supported)
PrintMessage("Loop with early exit:")
k = 0
WhileLoop LessThan(k, 10) {
    PrintNumber(k)
    k = Add(k, 1)
    is_five = EqualTo(k, 5)
    IfCondition is_five ThenBlock: {
        PrintMessage("Breaking at 5")
        k = 10  // Force loop exit
    }
}

PrintMessage("All loop tests passed!")