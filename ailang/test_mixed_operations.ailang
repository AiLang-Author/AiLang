
// test_mixed_operations.ailang
// Test combinations of different operations

PrintMessage("Mixed Operations Test")
PrintMessage("=====================")

// Test arithmetic with bitwise
val = Add(LeftShift(1, 3), 2)  // (1 << 3) + 2 = 10
PrintMessage("(1 << 3) + 2 = 10:")
PrintNumber(val)

// Test function return in expressions
Function.Utils.GetTen {
    Body: {
        ReturnValue(10)
    }
}

result = Multiply(Utils.GetTen(), 5)
PrintMessage("GetTen() * 5 = 50:")
PrintNumber(result)

// Test array index calculations
arr = ArrayCreate(10)
base = 2
offset = 3
index = Add(base, offset)
ArraySet(arr, index, 999)
val = ArrayGet(arr, 5)
PrintMessage("Dynamic array index (999):")
PrintNumber(val)

PrintMessage("Mixed operations complete!")