// test_perf_simple.ailang
// Simple performance test without special syntax

PrintMessage("Simple Performance Test")
PrintMessage("======================")

// Test basic operations timing
// Since DebugPerf parsing isn't ready, we'll use Debug blocks for now

Debug("perf_test", level=3) {
    // Test arithmetic
    sum = 0
    i = 0
    WhileLoop LessThan(i, 100) {
        sum = Add(sum, i)
        i = Add(i, 1)
    }
}

PrintMessage("Sum of 0 to 99:")
PrintNumber(sum)

// Test string operations
Debug("string_test", level=3) {
    str1 = "Hello"
    str2 = "World"
    result = StringConcat(str1, str2)
    PrintMessage(result)
}

// Test function calls
Function.Test.Work {
    Body: {
        x = Multiply(21, 2)
        ReturnValue(x)
    }
}

Debug("function_test", level=3) {
    result = Test.Work()
    PrintMessage("Function result:")
    PrintNumber(result)
}

PrintMessage("Test complete!")