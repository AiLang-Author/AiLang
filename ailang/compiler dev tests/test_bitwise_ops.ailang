// test_bitwise_ops.ailang
// Test all bitwise operations

PrintMessage("Bitwise Operations Test")
PrintMessage("========================")

// Test AND
a = 12  // 1100
b = 10  // 1010
and_result = BitwiseAnd(a, b)
PrintMessage("12 & 10 (should be 8):")
PrintNumber(and_result)

// Test OR
or_result = BitwiseOr(a, b)
PrintMessage("12 | 10 (should be 14):")
PrintNumber(or_result)

// Test XOR
xor_result = BitwiseXor(a, b)
PrintMessage("12 ^ 10 (should be 6):")
PrintNumber(xor_result)

// Test LEFT SHIFT
shifted_left = LeftShift(5, 2)
PrintMessage("5 << 2 (should be 20):")
PrintNumber(shifted_left)

// Test RIGHT SHIFT
shifted_right = RightShift(20, 2)
PrintMessage("20 >> 2 (should be 5):")
PrintNumber(shifted_right)

PrintMessage("Bitwise ops test complete!")