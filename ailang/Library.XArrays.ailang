// Peek at top without popping
Function.XStack.XPeek {
    Input: stack: Address
    Output: Integer
    Body: {
        size = XArray.XSize(stack)
        
        IfCondition EqualTo(size, 0) ThenBlock: {
            ReturnValue(XArrays.XERROR)
        }
        
        ReturnValue(XArray.XGet(stack, Subtract(size, 1)))
    }
