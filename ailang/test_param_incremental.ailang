// test_param_incremental.ailang
// Test parameters incrementally

PrintMessage("Incremental Param Test")

// No params
Function.P.Zero {
    Body: {
        ReturnValue(100)
    }
}

r0 = P.Zero()
PrintMessage("0 params:")
PrintNumber(r0)

// One param - just return it
Function.P.One {
    Input: a:
    Body: {
        ReturnValue(a)
    }
}

r1 = P.One(42)
PrintMessage("1 param (42):")
PrintNumber(r1)

// Two params - add them
Function.P.Two {
   Input: a:
    Input: b:
    Body: {
        sum = Add(a, b)
        ReturnValue(sum)
    }
}

r2 = P.Two(30, 12)
PrintMessage("2 params (30+12):")
PrintNumber(r2)

// Three params
Function.P.Three {
    Input: a:
    Input: b:  
    Input: c:
    Body: {
        s1 = Add(a, b)
        s2 = Add(s1, c)
        ReturnValue(s2)
    }
}

r3 = P.Three(10, 20, 12)
PrintMessage("3 params (10+20+12):")
PrintNumber(r3)

PrintMessage("Done")