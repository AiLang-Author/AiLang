// ==========================================
// TEST 7: RESP PARSER (FIXED WITH BYTE ACCESS)
// ==========================================
PrintMessage("TEST 7: RESP Parser Test")
PrintMessage("------------------------")

// Create RESP buffer: "*1\r\n$3\r\nGET\r\n"
resp_buffer = Allocate(64)

// Store RESP protocol bytes individually
StoreValue(resp_buffer, 42, "byte")          // '*'
StoreValue(Add(resp_buffer, 1), 49, "byte")  // '1'
StoreValue(Add(resp_buffer, 2), 13, "byte")  // '\r'
StoreValue(Add(resp_buffer, 3), 10, "byte")  // '\n'
StoreValue(Add(resp_buffer, 4), 36, "byte")  // '$'
StoreValue(Add(resp_buffer, 5), 51, "byte")  // '3'
StoreValue(Add(resp_buffer, 6), 13, "byte")  // '\r'
StoreValue(Add(resp_buffer, 7), 10, "byte")  // '\n'
StoreValue(Add(resp_buffer, 8), 71, "byte")  // 'G'
StoreValue(Add(resp_buffer, 9), 69, "byte")  // 'E'
StoreValue(Add(resp_buffer, 10), 84, "byte") // 'T'
StoreValue(Add(resp_buffer, 11), 13, "byte") // '\r'
StoreValue(Add(resp_buffer, 12), 10, "byte") // '\n'

// Parse and verify - read as bytes
first = Dereference(resp_buffer, "byte")
is_array = EqualTo(first, 42)
IfCondition is_array ThenBlock {
    PrintMessage("RESP array detected ✓")
}

// Check command bytes
g = Dereference(Add(resp_buffer, 8), "byte")
e = Dereference(Add(resp_buffer, 9), "byte")
t = Dereference(Add(resp_buffer, 10), "byte")

is_get = 0
check_g = EqualTo(g, 71)
IfCondition check_g ThenBlock { is_get = Add(is_get, 1) }
check_e = EqualTo(e, 69)
IfCondition check_e ThenBlock { is_get = Add(is_get, 1) }
check_t = EqualTo(t, 84)
IfCondition check_t ThenBlock { is_get = Add(is_get, 1) }

final_check = EqualTo(is_get, 3)
IfCondition final_check ThenBlock {
    PrintMessage("GET command parsed ✓")
}

PrintMessage("")

