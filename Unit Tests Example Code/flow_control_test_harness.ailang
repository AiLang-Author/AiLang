// Test 3.1: Break pattern
PrintMessage("3.1 Break Pattern (using flag)")
break_counter = 0
break_sum = 0
should_continue = True
WhileLoop And(LessThan(break_counter, 10), should_continue) {
    break_counter = Add(break_counter, 1)
    break_sum = Add(break_sum, break_counter)
    
    IfCondition EqualTo(break_counter, 4) ThenBlock: {
        should_continue = False  // This simulates break
    }
}
test_name = "Break at 4 (flag pattern)"
expected = 4
actual = break_counter
RunTask(RecordTest)

test_name = "Sum at break"
expected = 10  // 1+2+3+4
actual = break_sum
RunTask(RecordTest)

// Test 3.2: Continue pattern
PrintMessage("")
PrintMessage("3.2 Continue Pattern (using if-else)")
continue_counter = 0
odd_sum = 0
WhileLoop LessThan(continue_counter, 6) {
    continue_counter = Add(continue_counter, 1)
    
    // Skip even numbers (continue pattern)
    is_odd = Modulo(continue_counter, 2)
    IfCondition EqualTo(is_odd, 1) ThenBlock: {
        odd_sum = Add(odd_sum, continue_counter)
    }
    // ElseBlock would be empty - simulates continue
}
test_name = "Continue loop counter"
expected = 6
actual = continue_counter
RunTask(RecordTest)

test_name = "Odd numbers sum"
expected = 9  // 1+3+5
actual = odd_sum
RunTask(RecordTest)

