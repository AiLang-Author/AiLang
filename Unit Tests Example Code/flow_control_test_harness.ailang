// Test 4.3: Early exit with flag
PrintMessage("")
PrintMessage("4.3 Early Exit Pattern")
search_target = 7
found = False
found_index = -1
i = 0

// Simulated array using if-else chain
WhileLoop And(LessThan(i, 10), Not(found)) {
    current_value = 0
    IfCondition EqualTo(i, 0) ThenBlock: {
        current_value = 3
    } ElseBlock: {
        IfCondition EqualTo(i, 1) ThenBlock: {
            current_value = 5
        } ElseBlock: {
            IfCondition EqualTo(i, 2) ThenBlock: {
                current_value = 7  // Target!
            } ElseBlock: {
                current_value = 9
            }
        }
    }
    
    IfCondition EqualTo(current_value, search_target) ThenBlock: {
        found = True
        found_index = i
    }
    
    i = Add(i, 1)
}

test_name = "Found target"
expected = 1  // True
actual = found
RunTask(RecordTest)

test_name = "Found at index"
expected = 2
actual = found_index
RunTask(RecordTest)

